{
  "manifest_version": 3,
  "name": "Grayscale Toggler",
  "version": "1.0",
  "description": "This browser extension toggles whatever webpage you want to be black and white!",
  "permissions": ["tabs", "storage", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

